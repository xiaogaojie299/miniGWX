.header {
  width: 100%;
  height: 228rpx;
  background: linear-gradient(270deg, #EF753C 0%, #F13232 100%);
  position: relative;
}

.teach-info-box {
  width: 702rpx;
  height: 260rpx;
  background: #FFFFFF;
  box-shadow: 0px 4rpx 8rpx 0px rgba(213, 213, 213, 0.5);
  border-radius: 4rpx;
  position: absolute;
  top: 142rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top:110rpx;
}

.teach-info-name {
  display: flex;
  align-items: center;
}

.teach-info-name>image {
  width: 30rpx;
  height: 26rpx;
  border: 1px solid black;
  margin-right: -12rpx;
}
.teach-info-detail{
font-size: 28rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: #333333;
}
.teach-info-img {
  width: 156rpx;
  height: 156rpx;
  position: absolute;
  top: 76rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 50%;
  background-color: red;
}
