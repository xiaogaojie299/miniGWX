input{
  text-align: right;
  width: 90%;
  height: 120rpx;
}
.my-font {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
}

.font-24 {
  font-size: 24rpx;
}

.header {}

.header>.row1 {
  height: 134rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #DEDEDE;
}

.row1 .user-img {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.row1 .right_icon {
  width: 25rpx;
  height: 34rpx;
}

.main {
  padding-bottom: 110rpx;
}

.main>.card-bg {
  background: #FFFFFF;
  box-shadow: 0px 4rpx 28rpx 0rpx rgba(206, 206, 206, 0.5);
  border-radius: 4rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  padding-bottom: 10rpx;
}

.papers {
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 28rpx 0rpx rgba(206, 206, 206, 0.5);
  border-radius: 4rpx;
  height: 100%;
}

.papers>.title {
  font-size: 34rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
}

.papers-img {
  display: flex;
  justify-content: center;
  position: relative;
}
.papers-img>.icon_close{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right:0;
  top: 0;
  transform: translate(-50%,-50%);
}

.papers-img>image {
  width: 472rpx;
  height: 316rpx;
}

.addbtn {
  display: flex;
  justify-content: center;
}

.addbtn>button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 326rpx;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  border: 2rpx solid #F13934;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #F13833;
}

.addbtn image{
  width: 26rpx;
  height: 28rpx;
  margin-right: 6rpx;
}
.footer{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 98rpx;
background: linear-gradient(270deg, #EF753C 0%, #F13232 100%);
font-size: 30rpx;
font-family: PingFangSC-Medium, PingFang SC;
font-weight: 500;
color: #FFFFFF;
position: fixed;
bottom: 0;

}
/* 弹框中的科目菜单选择 */
.popup-header{
  padding:0 30rpx;
  width: 694rpx;
  margin: 46rpx auto;
}
.popup-left{
  text-align: left;
font-size: 28rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: #333333;
}
.popup-center{
  margin: 0 auto;
}
.popup-right{
  text-align: right;
font-size: 28rpx;
font-family: PingFangSC-Semibold, PingFang SC;
font-weight: 600;
color: #F13C38;
}
.subject{
  display: flex;
  justify-content: start;
  flex-wrap: wrap;
  width: 694rpx;
  margin: 0 auto;
}
.subject-item{
  width: 176rpx;
  height: 64rpx;
  border-radius: 32rpx;
font-size: 28rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
margin-bottom:28rpx;
}
.unselectSub{
  background: #F5F5F5;
  color: #3A3A3A;
}
.selectSub{
background: rgba(241, 60, 56, 0.13);
color: #F13C38;
}
.subject-item:nth-of-type(3n-4){
  margin-left:76rpx;
  margin-right:76rpx;
}
