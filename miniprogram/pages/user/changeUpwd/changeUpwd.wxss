input{
  height: 100%;
}
.input-box{
  padding:26rpx 40rpx;
}
.input-box input{
  color: #333333;
}
.input-box>.input-item{ 
  padding:0 30rpx;
  position: relative;
  width: 100%;
  height: 92rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  border: 2rpx solid #F3F3F3;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #B2B2BF;
  line-height: 42rpx;
  margin: 14rpx 0;
}
.input-box>.input-item>.right-title{
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #EB002A;
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}
.title-bar{
  margin:30rpx 0 82rpx 0;
  width: 100%;
  white-space: nowrap;
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #464662;
}
.btn{
  width: 456rpx;
  height: 88rpx;
  position: relative;
  margin: 0 auto;
  background: linear-gradient(270deg, #EF753C 0%, #F13232 100%);
}
.click{
  opacity: 1;
}
.no-click{
opacity: 0.4;
}
.test{
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}