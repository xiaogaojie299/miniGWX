/* myB/pages/cooperation/pages/organization/organization.wxss */
page {
  background-color: #FBFBFC;
}

.p {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 24rpx 0 26rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  border-bottom: 1px solid #f8f8f8;
  background-color: #fff;
}

.p-left {
  width: 140rpx;
}

.ipt {
  font-size: 28rpx;
}

.ipt-placeholder {
  font-size: 28rpx;
  color: #969696;
  font-weight: 400;
}

.city {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  padding: 0 24rpx 0 26rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  border-bottom: 1px solid #f8f8f8;
  background-color: #fff;

}

.city>.left>text {
  color: #969696;
}

.address {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 24rpx;
  height: 188rpx;
  background-color: #fff;

}

.address-left {
  width: 140rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
}

.area-box {
  width: 390rpx;
  padding-top: 5rpx;
}

.ps {
  width: 100%;
  height: 336rpx;
  background: #FFFFFF;
  margin-top: 14rpx;
  padding: 20rpx 24rpx 0 26rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
}

.send-btn {
  position: fixed;
  left: 50%;
  bottom: 60rpx;
  width: 100%;
  height: 98rpx;
  transform: translateX(-50%);
  background: linear-gradient(270deg, #EF753C 0%, #F13232 100%);
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;

  display: flex;
  align-items: center;
  justify-content: center;
}