.title {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
}

.light-inlie {
  margin-top: 20rpx;
  height: 20rpx;
  background-color: #F8F8F8;
}

.font-cont {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #626971;
}

.color-ori {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #FE9E57;
}

.header {}

.right-content {
  text-align: right;
  flex-direction: end;
  display: flex;
  align-items: center;
  /* width: 200rpx; */
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FE9E57;
}

.right-content>image {
  width: 36rpx;
  height: 28rpx;
}

.card:last-child>.light-inlie {
  background: #ffffff;
}

.card-content {
  height: 242rpx;
  background: #FAFAFA;
  border-radius: 4rpx;
  position: relative;
}

.detail {
  position: absolute;
  right: 22rpx;
  width: 152rpx;
  height: 52rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  border: 1rpx solid #F13232;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #F13232;

}

.card-content-item>image {
  width: 22rpx;
  height: 22rpx;
}

.top-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left-cont {
  width: 100%;
  width: 100%;
  height: 60rpx;
  position: relative;
}

.left-cont>input {
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  padding:0 62rpx;
  background: #F5F5F5;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}

.left-cont>image {
  position: absolute;
  width: 28rpx;
  height: 26rpx;
  top: 50%;
  left: 24rpx;
  transform: translateY(-50%);
}
.right-text{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  white-space: nowrap;
  margin-left:14rpx;
}