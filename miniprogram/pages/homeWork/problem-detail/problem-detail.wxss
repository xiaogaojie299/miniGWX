.header{
  width: 100%;
  display: flex;
  align-items: center;
  height: 140rpx;
}
.head-portrait{
  margin-right: 22rpx;
  border: 1px solid red;
  width: 92rpx;
height: 92rpx;
box-shadow: 0px 4rpx 8rpx 0rpx rgba(201,201,201,0.5);
}
.right-content{
  width: 100%;
}
.main{
  /* 因为底部按钮是固定地位，所以要下边距==footer的高度 */
  padding-bottom: 110rpx;
}
.pro-detail{
}
.pro-detail-row1{
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #2B3540;
  line-height: 44rpx;
}
.pro-detail-row2{
height: 72rpx;
font-size: 26rpx;
font-family: PingFangSC-Medium, PingFang SC;
font-weight: 500;
color: #666666;
line-height: 36rpx;
}
.pro-detail-row3{
  width: 100%;
  height: 350rpx;
  border: 1px solid red;
} 
.pro-detail-row3>image{
  width: 100%;
  height: 100%;
}
.answer-box{
  
}
.answer-box-item{
  border-bottom: 1px solid #dddddd;
}
.answer-box-item-top{
  display: flex;
  align-items: center;
  height: 140rpx;
}
.answer-box-item-top-col2{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
font-size: 28rpx;
font-family: PingFangSC-Medium, PingFang SC;
font-weight: 500;
color: #2B3540;
}
.accept-tag{
  margin-left: auto;
  width: 140rpx;
  height: 44rpx;
  background: #FFFFFF;
  border-radius: 4rpx;
  border: 1px solid #F13632;
  font-size: 24rpx;
font-family: PingFangSC-Medium, PingFang SC;
font-weight: 500;
color: #F13632;
display: flex;
align-items: center;
justify-content: center;
}
.my-answer-tag{
  height: 100rpx;
  display: flex;
  align-items: center;
  margin-left: auto;
}
.my-answer-item-right{
  width: 140rpx;
height: 44rpx;
background: rgba(241, 63, 60, 0.07);
border-radius: 4rpx;
font-size: 24rpx;
font-family: PingFangSC-Medium, PingFang SC;
font-weight: 500;
color: #F13632;
display: flex;
align-items: center;
justify-content: center;
}
.pullDown{
color: #666666;
margin-left: 20rpx;
}
.peopel-answer{
font-size: 26rpx;
font-family: PingFangSC-Medium, PingFang SC;
font-weight: 500;
color: #666666;
}
.footer{
  background:#FFF;
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
}
.footer>input{
  width: 632rpx;
height: 72rpx;
background: #F7F8FA;
border-radius: 4rpx;
padding: 0 32rpx;
}
.fabu{
  width: 44rpx;
  height: 44rpx;
}
/* 分割线（拷贝的别的页面样式） */
.my-problem {
  margin-left: 14rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  white-space: nowrap;
}
/* .answer-box {
  width: 100%;
  border-bottom: 1px solid #dddddd;
} */

.problem-title {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #2B3540;
  line-height: 44rpx;
  height: 44rpx;
}

.problem-desc {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  height: 36rpx;
  line-height: 36rpx;
}

.pro-img {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
}

.pro-img>image {
  width: 220rpx;
  height: 224rpx;
}

.problem-timer {
  display: flex;
  justify-content: space-between;
  height: 40rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.8);
  line-height: 40rpx;
}

.problem-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14rpx;
}

.problem-footer-left>image {
  width: 22rpx;
  height: 26rpx;
  margin-right: 12rpx;
}

.problem-footer-left>text {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
}
.problem-footer-right {
font-size: 24rpx;
font-family: PingFangSC-Medium, PingFang SC;
font-weight: 500;
color: rgba(0, 0, 0, 0.8);
}

