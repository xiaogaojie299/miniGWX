<!--index.wxml-->
<view class="container">
    <!-- <view class="nav-style">
        <view class="top-title">您好，张三</view>
    </view> -->
    <view>
        <top-content></top-content>
    </view>
    <view class='swiper-box'>
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperChange">
        <block wx:for="{{imgUrls}}">
            <swiper-item>
            <image src="{{item}}" class="slide-image" />
            </swiper-item>
        </block>
        </swiper>
        <view class="dots"> 
            <block wx:for="{{imgUrls}}" wx:key="unique"> 
                <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view> 
            </block> 
        </view>
        <!-- 横条 -->
        <view class="swiper-inline"></view>
  </view>
    <view class="main">
        <!-- 插槽 -->
        <view class="curmbs">
            <curmbs>今日课程</curmbs>
        </view>
        <!-- 今日课程安排 -->
        <view>
            <today-course wx:for="{{2}}" wx:key="item"></today-course>
        </view>

        <!-- 课程表 -->
        <view>
            <curmbs>排行榜</curmbs>
            <view>
                <rank-list wx:for="{{2}}" wx:key="item" />
            </view>
        </view>
    </view>

    <!-- 返回顶部 -->
    <image class="back-top" bindtap="go_top" wx:if="{{isTop}}" src="/images/top@2x.png"></image>
</view>