.container{
  position: relative;
}
.nav-style {
  width: 100%;
  height: 128rpx;
  background: linear-gradient(270deg, #EF753C 0%, #F13232 100%);
}

.top-title {
  padding-top: 60rpx;
  font-size: 40rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

/* 轮播图 */

swiper {
  width: 100%;
}

.swiper-box {
  position: relative;
  width: 100%;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 8rpx;
  display: flex;
  justify-content: center;
}

.dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
background: rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  /* transition: all .6s; */
}

.dots .dot.active {
  width: 14rpx;
  background: #FFFFFF;
}

swiper image {
  width: 100%;
  height: 100%;
}

.swiper-inline {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 28rpx;
  background: rgba(0, 0, 0, 0.22);
}

.main {
  padding: 22rpx
}
.back-top{
  width: 56rpx;
  height: 56rpx;
  position: fixed;
  bottom: 38rpx;
  right: 18rpx;
}