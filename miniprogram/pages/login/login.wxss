input {
  height: 92rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  border: 2rpx solid #F3F3F3;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #B2B2BF;
  line-height: 42rpx;
  padding: 0 30rpx;
}
.my-font view{
  font-size: 16px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
}
.active{
  color:red
}
.unactive{
  color:#BABAC5
}
.bg-color {
  width: 100%;
  height: 340rpx;
  position: absolute;
  z-index: -1;
  top: 0;
}

.main {
  /* box-sizing: border-box; */
  width: 100%;
  height: 1038rpx;
  background: #FFFFFF;
  border-radius: 14px 14px 0px 0px;
  position: fixed;
  bottom: 0;
  padding:44rpx 38rpx;
}

.main-header {
  display: flex;
}

.pswd{
  height: 80rpx;
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  position: relative;
  white-space: nowrap;
}
.pswd:first-child{
  margin-left:124rpx;
  margin-right: 158rpx;
}
.inline {
  position: absolute;
  bottom: 0;
  width: 30rpx;
  height: 6rpx;
  background: #EB002A;
  border-radius: 2px;
}

.main-center {
  margin-top:78rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.row1-input {
  width: 672rpx;
  height: 92rpx;
  margin-bottom: 10rpx;
}

.input-title {
  position: relative;
  width: 672rpx;
  height: 92rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  border: 2rpx solid #F3F3F3;
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #B2B2BF;
  line-height: 42rpx;
  margin: 10rpx 0;
}

.input-title>input {
  width: 70%;
  height: 98%;
  border: none;
}

.input-title>view {
  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #EB002A;
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}

.main-footer {
  display: flex;
  justify-content: center;
  margin-top:60rpx;
}

.btn {
  width: 456rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(110deg, #F13232, #EF753C);
  box-shadow: 0px 6px 9px 0px rgba(68, 5, 5, 0.32);
  border-radius: 4px;

  font-size: 30rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}