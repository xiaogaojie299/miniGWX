/* question/pages/question/question.wxss */
.nav-name {
  display: flex;
  align-items: center;
}

.nav-name image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.q-box {
  position: relative;
  width: 702rpx;
  padding: 22rpx 34rpx 48rpx 30rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 14rpx 0rpx rgba(165, 165, 165, 0.5);
  border-radius: 4rpx;
  margin-top: 22rpx;
}

.q-top {
  font-size: 30rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  text-align: center;

}

.q-title {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #2B3540;
  margin-top: 28rpx;
}

.q-title text {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

.code {
  position: absolute;
  top: 24rpx;
  right: 34rpx;
  width: 40rpx;
  height: 40rpx;
}

.active {
  color: #fff !important;
  background: linear-gradient(270deg, #EF753C 0%, #F13232 100%);
}

/* 单选 */
.radio-box .q-option {
  display: flex;
  font-size: 24rpx;
  margin-top: 40rpx;
}

.radio-box .q-option .tag {
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #F13332;
  border-radius: 50%;
  color: #F13332;
  text-align: center;
  line-height: 34rpx;
  margin-right: 20rpx;
}

/* 填空题 */
.gap-box .q-main {
  width: 608rpx;
  height: 180rpx;
  border-radius: 8rpx;
  border: 2rpx solid #EFEFEF;
  margin-top: 20rpx;
  padding: 14rpx 20rpx;
  font-size: 30rpx;
}

/* 简答题 */
.short-box .q-main {
  margin-top: 20rpx;
}

.short-box .q-main>image {
  width: 640rpx;
  height: 320rpx;
  border-radius: 4rpx;
}

.short-user-answer {
  width: 702rpx;
  height: 504rpx;
  background: #FAFAFA;
  border-radius: 4rpx;
  margin-top: 22rpx;
  padding: 18rpx 30rpx;
}

/* 底部按钮 */
.cut-btns {
  position: fixed;
  bottom: 0;
  display: flex;
  width: 100%;
  height: 98rpx;
  box-shadow: 0rpx -2rpx 8rpx 0rpx rgba(240, 240, 240, 0.81);

  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  text-align: center;
  line-height: 98rpx;
}

.top-btn {
  flex: 1;
  color: #2A2A2A;
  background-color: #fff;
}

.next-btn {
  flex: 1;
  color: #fff;
  background: linear-gradient(270deg, #EF753C 0%, #F13232 100%);
}

/* 弹框 */
.van-bottom-enter-to .num-box {
  display: flex;
  flex-wrap: wrap;
  padding: 48rpx 46rpx 0;
  border-bottom: 1rpx solid #eee;
}

.van-bottom-enter-to .num-box .num {
  width: 72rpx;
  height: 72rpx;
  border: 2rpx solid #E8E6E6;
  border-radius: 50%;
  text-align: center;
  line-height: 72rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #373737;
  margin: 30rpx 35rpx 32rpx 0;
}

.van-bottom-enter-to .num-box .num:nth-child(6n) {
  margin-right: 0;
}

.van-bottom-enter-to .num-tags {
  display: flex;
  align-items: center;
  margin: 32rpx 0 34rpx;
}

.van-bottom-enter-to .num-tags .num-tag-item {
  display: flex;
  align-items: center;
  margin-right: 28rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.van-bottom-enter-to .num-tags .tag {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.num-tags .tag1 {
  background: #79A4D7;
}

.num-tags .tag2 {
  background: linear-gradient(270deg, #EF753C 0%, #F13232 100%);
}

.num-tags .tag3 {
  border: 2rpx solid #E8E6E6;
}

.van-bottom-enter-to .send-btn {
  height: 98rpx;
  background: linear-gradient(270deg, #EF753C 0%, #F13232 100%);
  text-align: center;
  line-height: 98rpx;
  color: #fff;
  font-size: 30rpx;
}
/* 已做 */
.have {
  background: #79A4D7;
  color: #fff !important;
}
/* 当前 */
.current {
  background: linear-gradient(270deg, #EF753C 0%, #F13232 100%);
  color: #fff !important;

}