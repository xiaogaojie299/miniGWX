.top-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left-cont {
  width: 100%;
  width: 100%;
  height: 60rpx;
  position: relative;
}

.left-cont>input {
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  padding:0 62rpx;
  background: #F5F5F5;
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}

.left-cont>image {
  position: absolute;
  width: 28rpx;
  height: 26rpx;
  top: 50%;
  left: 24rpx;
  transform: translateY(-50%);
}
.right-text{
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  white-space: nowrap;
  margin-left:14rpx;
}