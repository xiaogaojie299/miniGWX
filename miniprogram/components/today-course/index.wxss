.title {
  width: 96rpx;
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #222222;
  line-height: 44rpx;
}

.course {
  width: 100%;
  height: 318rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(213, 213, 213, 0.5);
  border-radius: 4rpx;
  padding:0 20rpx;
  margin-bottom:16rpx;
}

.course-top {
  width: 100%;
  height: 188rpx;
  padding-top: 24rpx;
}

.course-bottom {
  height: 126rpx;
  width: 100%;
}

.row {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.course-name {
  width: 400rpx;
  width: 50%;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #222222;
  line-height: 44rpx;
}

.course-hours {
  font-size: 22rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
}
.row2,
.row3 {
  display: flex;
  align-items: center;
  margin:10rpx 0;
}

.row2>.course-tag {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 44rpx;
  background: #FFFFFF;
  border-radius: 4rpx;
  border: 1rpx solid #F13632;
  /* 字体大小 */
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #F13632;
  margin-right: 28rpx;
}

.row3>image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 16rpx;
}

.row3>.course-times {
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #626971;
}

.course-bottom {
  margin-top:-10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #D5D5D5;
}

.left-content {
  width: 500rpx;
  display: flex;
  align-items: center;
}

.left-content>image {
  width: 92rpx;
  height: 92rpx;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(201, 201, 201, 0.5);
  border: 1px solid red;
  margin-right: 20rpx;
}

.left-content>.teacher-name {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #2B3540;
}
.right-btn{
  width: 140rpx;
height: 56rpx;
background: linear-gradient(270deg, #EF753C 0%, #F13232 100%);
border-radius: 8rpx;
/* 字体 */
font-size: 24rpx;
font-family: PingFangSC-Regular, PingFang SC;
font-weight: 400;
color: #FFFFFF;
/* 垂直居中 */
display: flex;
align-items: center;
justify-content: center;
}