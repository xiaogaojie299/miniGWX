@import '../common/index.wxss';

.van-swipe-cell {
  position: relative;
  overflow: hidden
}

.van-swipe-cell__left,
.van-swipe-cell__right {
  position: absolute;
  top: 0;
  height: 100%
}

.van-swipe-cell__left {
  left: 0;
  -webkit-transform: translate3d(-100%, 0, 0);
  transform: translate3d(-100%, 0, 0)
}

.van-swipe-cell__right {
  right: 0;
  -webkit-transform: translate3d(100%, 0, 0);
  transform: translate3d(100%, 0, 0)
}


.van-swipe-cell__left,
.van-swipe-cell__right {
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #f44;
}